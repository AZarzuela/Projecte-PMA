<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.upc.pma.calculadora.CalculadoraActivity">

    <Button
        android:text="CLR"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/clr_button"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <TextView
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:id="@+id/num"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/clr_button"
        android:layout_toStartOf="@+id/clr_button" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/clr_button"
        android:layout_centerHorizontal="true">

        <Button
            android:text="7"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/siete_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="numberClick"
            />

        <Button
            android:text="8"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/ocho_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="numberClick"/>

        <Button
            android:text="9"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/nueve_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="numberClick"/>

        <Button
            android:text="/"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/dividir_button"
            android:textSize="30sp"
            android:layout_column="4"
            android:layout_row="1"
            android:onClick="operatorClick"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="4"
            android:id="@+id/cuatro_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="numberClick"/>

        <Button
            android:text="5"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/cinco_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="numberClick"/>


        <Button
            android:text="6"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/seis_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="numberClick"/>

        <Button
            android:text="x"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/multiplicar_button"
            android:textSize="22sp"
            android:layout_column="4"
            android:layout_row="2"
            android:onClick="operatorClick"/>

        <Button
            android:text="1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/uno_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="numberClick"/>

        <Button
            android:text="2"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/dos_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="numberClick"/>


        <Button
            android:text="3"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/tres_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="numberClick"/>


        <Button
            android:text="-"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/resta_button"
            android:textSize="30sp"
            android:layout_column="4"
            android:layout_row="3"
            android:onClick="operatorClick"/>

        <Button
            android:text="."
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/punto_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="numberClick"/>

        <Button
            android:text="0"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:id="@+id/cero_button"
            android:textSize="30sp"
            android:background="#FFFFFF"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="numberClick"/>

        <Button
            android:text="="
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/igual_button"
            android:textSize="30sp"
            android:background="@color/colorigual"
            android:layout_column="3"
            android:layout_row="4"
            android:textColor="#ffffff"
            android:onClick="setResult"/>

        <Button
            android:text="+"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/suma_button"
            android:textSize="30sp"
            android:layout_column="4"
            android:layout_row="4"
            android:onClick="operatorClick"/>

    </GridLayout>

</RelativeLayout>
